@using datamaster;
@using PagedList.Mvc;
@using PagedList;
@using DataEditor.myClass;
@using DataEditor.Models;

@model IPagedList<VwProduct>


@{ ViewBag.Title = "لیست کالاها";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
@section title{لیست کالاها}
@section style{
    <style>
        .page-link {
            position: relative;
            display: block;
            padding: .5rem .75rem;
            margin-left: -1px;
            line-height: 1.25;
            color: #18bc9c;
            background-color: #2c3e50;
            border: 1px solid #2c3e50;
        }

        .page-item.disabled .page-link {
            color: #868e96;
            pointer-events: none;
            cursor: auto;
            background-color: #2c3e50;
            border-color: #2c3e50;
        }

        .page-item.active .page-link {
            z-index: 0;
            color: #fff;
            background-color: #439484;
            border-color: #439484;
        }

        .page-item:last-child .page-link {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
            border-top-left-radius: .25rem;
            border-bottom-left-radius: .25rem;
        }

        .page-item:first-child .page-link {
            margin-left: 0;
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
            border-top-right-radius: .25rem;
            border-bottom-right-radius: .25rem;
        }

        .pagination {
            text-align: center;
            display: flex;
            justify-content: center;
            width: auto;
        }

        #filter {
            /*position:relative;
        cursor:pointer;*/
        }

        #Dfilter {
            position: fixed;
            /*bottom: -60px;*/
            direction: rtl;
            /*background-color: rgb(44,62,80);*/
            padding: 10px;
        }

        .ff {
            margin: 0 8px;
        }

        #dcf {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            display: flex;
            background-color: #000000c7;
            justify-content: center;
            align-items: center;
            z-index: 6;
        }

        #selectf {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            z-index: 7;
        }

        #Dfilter {
            position: relative;
            z-index: 8;
        }

        #mainNav {
            z-index: 5;
        }

        .form-inline {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-flow: row wrap;
            flex-flow: row wrap;
            -ms-flex-align: center;
            align-items: center;
            justify-content: center;
            margin-bottom: 7px;
            margin-top: 20px;
        }

        .div-c {
            padding: 0;
        }

        .custom-control-input:checked ~ .custom-control-label:before {
            color: #fff;
            border-color: #374859;
            background-color: #374859;
        }

        .footer-dark {
            display: none;
        }

        #filter {
            position: relative;
            z-index: 2;
        }

        .btn-primary {
            background-color: #374859;
            border-color: #18bc9c;
        }
    </style>
}
@*@section list{disabled}*@

<div id="filter">
    <div class="" id="Dfilter" style="">
        <form class="form-inline" action="@Url.Action("list")">
            <select class="form-control ff" name="store1">

                <option value="all" selected>همه انبار ها</option>
                @if (ViewBag.store != null)
                {
                    foreach (filtercs item in ViewBag.store)
                    {
                        if (!string.IsNullOrWhiteSpace(item.name))
                        {
    <option value="@item.stor_id">@item.name</option>
 }
else
{
<option value="@item.stor_id">@item.stor_id</option>
}
}
}


            </select>
            <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="switch1" name="example">
                <label class="custom-control-label" for="switch1">فقط کالای موجود</label>
            </div>
            <button class="btn btn-primary ff" type="submit">اعمال</button>
        </form>
    </div>
</div>
<div class="container-lg d-flex justify-content-center align-items-center align-content-center justify-content-xl-center align-items-xl-center div-c" style="/*height: 83%;*/">
    <div class="table-responsive">
        <table class="table table-striped table-hover table-dark">
            <thead>
                <tr>
                    <th>موجودی</th>
                    <th>قیمت&nbsp;</th>
                    <th>نام انبار</th>
                    <th>کد انبار</th>
                    <th>نام کالا</th>
                    <th>کد کالا</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        <td>@item.Inventory</td>
        <td>@Number.spacer(item.SalePrice)</td>
        <td>@item.StoreName</td>
        <td>@item.StroeId</td>
        <td>@item.Name</td>
        <td>@item.Id</td>
    </tr>
}


            </tbody>

        </table>
        <div id='Paging' style="text-align: center">
            @{ string query = "";
                            if (ViewBag.store1 != null) query = $"store1={ViewBag.store1}";
                            if (ViewBag.example != null && query != null) query += "&";
                            if (ViewBag.example != null) query += $"example={ ViewBag.example}";

                            ViewData["QS"] = query; }
            @await Html.PartialAsync("pagination", Model)

            @*@Html.PagedListPager(Model, page => Url.Action("list", new { page, ViewBag.store1, ViewBag.example }))*@

        </div>

    </div>
</div>
@section footer{style="position:fixed;}
@section list{disabled}
@section scripts{
    <script src="~/assets/js/jquery-ui.min.js"></script>
    <script>
        //alert("top:" + $("#filter").outerHeight() + ";")
        $(".pagination").children("li").addClass("page-item");
        $(".pagination").children("li").children("a").addClass("page-link");
        $("#dcf").hide();
        $("#filter").click(function () {
            $("#dcf").show("blind", {}, 500, {});
        })
        $("#selectf").click(function () {
            $("#dcf").hide("blind", {}, 500, {});
        })
